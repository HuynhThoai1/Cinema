{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Cinema (Codespaces)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++23",
        "ui/*.cpp",
        "dal/*.cpp",
        "dto/*.cpp",
        "bus/*.cpp",
        "-I", "ui",
        "-I", "dal",
        "-I", "dto",
        "-I", "bus",
        "-o", "out/cinema_app"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Run Cinema",
      "type": "shell",
      "command": "./out/cinema_app",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": [
        "Build Cinema (Codespaces)"
      ],
      "problemMatcher": []
    }
  ]
}
